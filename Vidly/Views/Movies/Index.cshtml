@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<ul>
    @foreach (var Movie in Model)
    {
        <li>
            @Html.ActionLink(
                Movie.Name,
                "Details",
                "Movies",
                new { id = Movie.Id },
                null)
        </li>
    }
</ul>
